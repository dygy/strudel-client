---
// Debug page to test OAuth flow
export const prerender = true;
---

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Debug Auth | Strudel</title>
    <style>
        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            max-width: 800px;
            margin: 0 auto;
            padding: 2rem;
            background: #f8fafc;
        }
        .container {
            background: white;
            border-radius: 8px;
            padding: 2rem;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
        }
        button {
            background: #3b82f6;
            color: white;
            border: none;
            padding: 0.75rem 1.5rem;
            border-radius: 6px;
            cursor: pointer;
            margin: 0.5rem;
        }
        button:hover {
            background: #2563eb;
        }
        .info {
            background: #f3f4f6;
            padding: 1rem;
            border-radius: 6px;
            margin: 1rem 0;
            font-family: monospace;
            white-space: pre-wrap;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Debug Authentication</h1>
        
        <div>
            <h2>Current State</h2>
            <div id="current-state" class="info">Loading...</div>
        </div>
        
        <div>
            <h2>Actions</h2>
            <button onclick="testGoogleAuth()">Test Google OAuth</button>
            <button onclick="checkCookies()">Check Cookies</button>
            <button onclick="testAPI()">Test API</button>
            <button onclick="clearCookies()">Clear Cookies</button>
        </div>
        
        <div>
            <h2>Debug Log</h2>
            <div id="debug-log" class="info"></div>
        </div>
    </div>

    <script type="module">
        let debugLog = '';
        
        function log(message) {
            debugLog += new Date().toISOString() + ': ' + message + '\n';
            document.getElementById('debug-log').textContent = debugLog;
            console.log(message);
        }
        
        function updateCurrentState() {
            const cookies = document.cookie;
            const hasAccessToken = cookies.includes('sb-access-token=');
            const hasUser = cookies.includes('sb-user=');
            
            let userInfo = 'No user cookie';
            if (hasUser) {
                try {
                    const userCookie = cookies.split('; ').find(row => row.startsWith('sb-user='));
                    if (userCookie) {
                        const userJson = decodeURIComponent(userCookie.split('=')[1]);
                        const user = JSON.parse(userJson);
                        userInfo = `User: ${user.email} (${user.name})`;
                    }
                } catch (error) {
                    userInfo = 'Error parsing user cookie: ' + error.message;
                }
            }
            
            const state = `
URL: ${window.location.href}
Has access token cookie: ${hasAccessToken}
Has user cookie: ${hasUser}
${userInfo}
All cookies: ${cookies || 'None'}
            `.trim();
            
            document.getElementById('current-state').textContent = state;
        }
        
        window.testGoogleAuth = async () => {
            try {
                log('Starting Google OAuth test...');
                const { supabase } = await import('/src/lib/supabase.ts');
                
                log('Supabase client loaded');
                log('Redirect URL will be: ' + window.location.origin + '/auth/callback');
                
                const { error } = await supabase.auth.signInWithOAuth({
                    provider: 'google',
                    options: {
                        redirectTo: `${window.location.origin}/auth/callback`
                    }
                });
                
                if (error) {
                    log('OAuth error: ' + error.message);
                } else {
                    log('OAuth initiated successfully');
                }
            } catch (error) {
                log('Error: ' + error.message);
            }
        };
        
        window.checkCookies = () => {
            log('Checking cookies...');
            updateCurrentState();
            log('Cookie check complete');
        };
        
        window.testAPI = async () => {
            try {
                log('Testing API call...');
                const response = await fetch('/api/tracks/list', {
                    credentials: 'include'
                });
                
                const result = await response.json();
                log(`API response: ${response.status} - ${JSON.stringify(result)}`);
            } catch (error) {
                log('API error: ' + error.message);
            }
        };
        
        window.clearCookies = () => {
            log('Clearing cookies...');
            document.cookie = 'sb-access-token=; expires=Thu, 01 Jan 1970 00:00:00 UTC; path=/;';
            document.cookie = 'sb-refresh-token=; expires=Thu, 01 Jan 1970 00:00:00 UTC; path=/;';
            document.cookie = 'sb-user=; expires=Thu, 01 Jan 1970 00:00:00 UTC; path=/;';
            log('Cookies cleared');
            updateCurrentState();
        };
        
        // Initial state update
        updateCurrentState();
        log('Debug page loaded');
    </script>
</body>
</html>